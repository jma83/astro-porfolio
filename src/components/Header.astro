---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<header class="jm-header">
  <div class="jm-header__container">
    <div class="jm-header__content">
      <a href="/" class="jm-header__brand-link">
        <span class="text-white">JMA</span>
      </a>
      <nav>
        <ul class="flex flex-row gap-4">
          <li class="jm-header__list-item">
            <a href="/" class="jm-header__list-item-link">{t("nav.home")}</a>
          </li>
          <li class="jm-header__list-item">
            <a href="#" class="jm-header__list-item-link">{t("nav.about")}</a>
          </li>
          <li class="jm-header__list-item">
            <a href="#" class="jm-header__list-item-link">{t("nav.studies")}</a>
          </li>
          <li class="jm-header__list-item">
            <a href="#" class="jm-header__list-item-link"
              >{t("nav.experience")}</a
            >
          </li>
          <li class="jm-header__list-item">
            <a href="#" class="jm-header__list-item-link">{t("nav.projects")}</a
            >
          </li>
          <li class="jm-header__list-item">
            <a href="#" class="jm-header__list-item-link">{t("nav.contact")}</a>
          </li>
        </ul>
      </nav>
    </div>
  </div>
</header>

<style>
  .jm-header {
    @apply w-full text-white absolute top-0 left-0;
  }

  .jm-header__container {
    @apply w-full flex justify-center items-start px-4;
  }

  .jm-header__content {
    @apply w-full max-w-6xl flex justify-between items-center;
    @apply font-normal text-base;
  }

  .jm-header__list-item-link {
    @apply px-1 py-4;
  }

  .jm-header__brand-link {
    @apply p-4 relative text-2xl font-extrabold;
  }

  .jm-header__brand-link:after {
    @apply bg-primary-500;
  }
</style>
