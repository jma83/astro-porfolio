---
import { translate } from "@stores/i18nStore";
const t = translate.get();
---

<section class="jm-about" id="about">
  <div class="jm-about__container">
    <div class="jm-about__image-container">
      <img
        src="/images/about/aboutPortfolio.avif"
        alt="Developer portrair photo"
        class="rounded grayscale hover:grayscale-0"
        width="498"
        height="558"
      />
    </div>
    <div class="jm-about__content">
      <article class="jm-about__content-description">
        <h2 class="jm-about__title">{t("about.title")}</h2>
        <p class="jm-about__paragraph" set:html={t("about.description1")} />
        <p class="jm-about__paragraph">{t("about.description2")}</p>
        <p class="jm-about__paragraph">{t("about.description3")}</p>
      </article>
      <ul class="jm-about__list jm-about__paragraph">
        <li class="jm-about__list-item">
          <span>{t("about.list_item1")}</span><span>Javier Mart√≠nez Arias</span>
        </li>
        <li class="jm-about__list-item">
          <span>{t("about.list_item2")}</span><span>10/09/1996</span>
        </li>
        <li class="jm-about__list-item">
          <span>{t("about.list_item3")}</span><span>Elche (Alicante)</span>
        </li>
      </ul>
    </div>
  </div>
</section>

<style>
  .jm-about {
    @apply flex w-full items-center justify-center bg-white pb-8 pt-14;
  }

  .jm-about__container {
    @apply flex w-full max-w-6xl flex-grow flex-col-reverse items-center justify-start gap-x-16;
  }

  .jm-about__image-container {
    @apply flex w-full justify-center object-contain;
  }

  .jm-about__content {
    @apply flex flex-col justify-between gap-y-4 px-4 pb-8 pt-4;
  }

  .jm-about__content-description {
    @apply flex w-full flex-col gap-y-1;
  }

  .jm-about__title {
    @apply mb-6 text-4xl font-bold;
  }

  .jm-about__paragraph {
    @apply text-base font-normal leading-6 text-gray-600;
  }

  .jm-about__list {
    @apply flex flex-col gap-y-2;
  }

  .jm-about__list-item {
    @apply flex items-center justify-between gap-x-4;
  }

  .jm-about__list-item span:first-child {
    @apply mr-4 min-w-0 flex-1;
  }

  .jm-about__list-item span:last-child {
    @apply flex-1 overflow-hidden overflow-ellipsis;
  }

  .jm-about__list-item > span:first-child {
    @apply font-bold;
  }

  @screen md {
    .jm-about {
      @apply px-8 py-16;
    }

    .jm-about__container {
      @apply flex-row;
    }

    .jm-about__content {
      @apply gap-y-8;
    }

    .jm-about__title {
      @apply text-5xl;
    }

    .jm-about__paragraph {
      @apply text-lg leading-7;
    }
  }
</style>
