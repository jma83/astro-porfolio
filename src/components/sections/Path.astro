---

<section class="jm-path">
  <div class="jm-path__container">
    <div class="relative">
      <nav class="sticky left-0 top-64 p-4 mt-20">
        <ul>
          <li><a href="#">Estudios</a></li>
          <li><a href="#">Experiencia</a></li>
          <li><a href="#">Tecnologías</a></li>
        </ul>
      </nav>
    </div>
    <div class="jm-path__content">
      <h2 class="jm-path__title">Trayectoria</h2>
      <h3>Estudios</h3>
      {
        pathStudiesData.map((studyData) => {
          return <PathCard data={studyData} />;
        })
      }
      <h3>Idiomas</h3>
      {
        pathLanguagesData.map((languageData) => {
          return <PathLanguageCard data={languageData} />;
        })
      }
      <h3>Experiencia</h3>
      {
        pathExperienceData.map((experienceData) => {
          return <PathCard data={experienceData} />;
        })
      }
      <h3>Tecnologías</h3>
    </div>
  </div>
</section>

<style>
  .jm-path {
    @apply w-full flex justify-center items-center bg-white py-8;
  }

  .jm-path__container {
    @apply w-full max-w-6xl flex flex-grow justify-start gap-x-16;
  }

  .jm-path__content {
    @apply flex flex-col justify-between pt-4 pb-8 px-4 gap-y-4;
  }

  .jm-path__title {
    @apply text-4xl font-bold mb-6;
  }

  @screen md {
    .jm-path {
      @apply px-8 py-16;
    }
  }

  h3 {
    @apply font-bold;
  }
</style>
