---
import { translate } from "@stores/i18nStore";
import EmailIcon from "../icons/EmailIcon.astro";
import LinkedInIcon from "../icons/LinkedInIcon.astro";
const t = translate.get();
---

<section class="jm-contact" id="contact">
  <div class="jm-contact__container">
    <h2>{t("contact.title")}</h2>
    <div class="flex justify-around gap-4 mt-8">
      <div
        class="flex flex-col items-center gap-2 rounded-lg border border-gray-300 p-8"
      >
        <div class="p-4 rounded-full bg-primary-500">
          <EmailIcon classList="w-20 h-20 p-2" />
        </div>
        <b>Email</b>
      </div>

      <div
        class="flex flex-col items-center gap-2 rounded-lg border border-gray-300 p-8"
      >
        <div class="p-4 rounded-full bg-primary-500">
          <LinkedInIcon classList="w-20 h-20 p-4" />
        </div>
        <b>Linkedin</b>
      </div>
    </div>
  </div>
</section>

<style>
  h2 {
    @apply text-4xl font-bold;
  }

  .jm-contact {
    @apply w-full flex flex-col justify-center items-center bg-white px-8 py-16;
  }

  .jm-contact__container {
    @apply w-full flex flex-col  mb-12;
    max-width: 72rem;
  }
</style>
