---
import Header from "../components/Header.astro";
import "../styles/main.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link
      rel="preload"
      href="/fonts/poppins.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <slot />

  <style is:global>
    html {
      color-scheme: dark light;
    }

    /* Default styles */
    body {
      @apply font-poppins;
    }

    /* Styles for light background */
    body.light {
      @apply bg-gray-100; /* Default dark background */
      color: #999; /* Dark text color */
    }

    button {
      @apply border border-gray-900 p-4;
    }
  </style>
</html>
