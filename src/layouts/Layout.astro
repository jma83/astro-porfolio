---
import Header from "@components/layout/Header.svelte";
import "@styles/main.css";
import Footer from "@components/layout/Footer.astro";
interface Props {
  title: string;
}

const { title, lang } = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/avif" href="/favicon.png" />
    <link
      rel="preload"
      href="/fonts/poppins.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/poppins2.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header client:load lang={lang} />
  <slot />
  <Footer />
  <style is:global>
    html {
      @apply scroll-smooth;
      color-scheme: dark light;
      scrollbar-gutter: stable;
    }

    /* Default styles */
    body {
      @apply font-poppins text-black;
    }

    /* Styles for light background */
    body.light {
      @apply bg-gray-100; /* Default dark background */
      color: #999; /* Dark text color */
    }
  </style>
</html>
